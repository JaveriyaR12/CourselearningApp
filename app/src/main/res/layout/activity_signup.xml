<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="#5C819F">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="161dp"
        android:layout_height="64dp"
        android:layout_marginBottom="552dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="331dp"
        android:layout_height="76dp"
        android:layout_marginBottom="452dp"
        android:background="@drawable/edittext_design"
        android:drawableRight="@drawable/baseline_email_24"
        android:ems="10"
        android:hint="   E-mail"
        android:inputType="textEmailAddress"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textColorHint="#C6CED5"
        android:textSize="60px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_phonenumber"
        android:layout_width="333dp"
        android:layout_height="75dp"
        android:layout_marginBottom="352dp"
        android:background="@drawable/edittext_design"
        android:drawableRight="@drawable/baseline_phone_24"
        android:ems="10"
        android:hint=" Phone Number"
        android:inputType="phone"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textColorHint="#C6CED5"
        android:textSize="60px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="324dp"
        android:layout_height="74dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/edittext_design"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textColorHint="#C6CED5"
        android:textSize="60px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_confirmpassword"
        android:layout_width="335dp"
        android:layout_height="66dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/edittext_design"
        android:drawableRight="@drawable/baseline_password_24"
        android:ems="10"
        android:hint="  Confirm Password"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textColorHint="#C6CED5"
        android:textSize="60px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="193dp"
        android:layout_height="64dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#D6DBDF"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="70px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_login"
        android:layout_width="346dp"
        android:layout_height="55dp"
        android:layout_marginBottom="4dp"
        android:text="Already have an account?Log-In"
        android:textColor="@color/white"
        android:textSize="60px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="405dp"
        android:layout_height="119dp"
        android:layout_marginBottom="608dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/courseimagesignup" />
</androidx.constraintlayout.widget.ConstraintLayout>
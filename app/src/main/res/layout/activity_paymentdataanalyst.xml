<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment"
    tools:context=".Paymentdataanalyst">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/select"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">




    <AutoCompleteTextView
        android:id="@+id/auto_complete_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/editpayment"
        android:layout_width="323dp"
        android:layout_height="63dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="60dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:hint="Amount[INR]"
        android:textSize="30sp"
        android:textStyle="bold"
        android:ems="10"
        android:inputType="text"
        android:text="" />


    <Button
        android:id="@+id/buttonlearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Learning"
        android:textSize="30sp"
        android:backgroundTint="@color/lightgrey"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="500dp"/>

    <RadioGroup
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="50dp">

        <RadioButton
            android:id="@+id/debitcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Debit Card"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/creditcard"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/white"
            android:text="Credit Card"
            android:textSize="24sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/editexpireddate"
        android:layout_width="179dp"
        android:layout_height="63dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="50dp"
        android:ems="10"
        android:inputType="text"
        android:background="@color/white"
        android:hint="Expired Date"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editcvv"
        android:layout_width="131dp"
        android:layout_height="65dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="50dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="text"
        android:hint="  CVV"
        android:textSize="25dp"
        android:textStyle="bold" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>